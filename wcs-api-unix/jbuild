(jbuild_version 1)

(library
 ((name        wcs_api_unix)
  (public_name wcs-api-unix)
  (synopsis "Watson Conversation Service rest calls")
  (libraries (wcs-lib wcs-api cohttp.lwt))))

(install
  ((section lib)
   (files   (wcs_api_unix.rzi
             wcs_call_unix.rzi
             wcs_bot_unix.rzi))
   (package wcs-lib)))

(rule
 ((targets (wcs_api_unix.rzi))
  (deps    (wcs_api_unix.rmli))
  (action  (run rmlc -c ${<}))))

(rule
 ((targets (wcs_bot_unix.rzi))
  (deps    (wcs_bot_unix.rmli ../wcs-lib/wcs_t.rzi wcs_call_unix.rzi))
  (action  (run rmlc -I ../wcs-lib -c ${<}))))

(rule
 ((targets (wcs_call_unix.rzi))
  (deps    (wcs_call_unix.mli ../wcs-lib/wcs_t.rzi))
  (action  (run rmlc -I ../wcs-lib -c ${<}))))
