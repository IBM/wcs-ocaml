opam-version: "1.2"
name: "wcs-api"
version: "2017-05-26.03"
maintainer: [
  "Louis Mandel <lmandel@us.ibm.com>"
]
authors: [
  "Guillaume Baudart"
  "Louis Mandel"
  "Jérôme Siméon"
]
homepage: "https://github.com/IBM/wcs-ocaml"
bug-reports: "https://github.com/IBM/wcs-ocaml/issues"
license: "Apache License 2.0"
